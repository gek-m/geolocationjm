<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title_marker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_15"
        android:gravity="center_vertical"
        tools:text="Default Marker Title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/position_text_marker"
        />
    <TextView
        android:id="@+id/position_text_marker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:text="@string/position"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/title_marker"
        />
    <TextView
        android:id="@+id/latitude_marker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/default_padding"
        android:gravity="end"
        tools:text="-6547.7676"
        app:layout_constraintTop_toBottomOf="@id/position_text_marker"
        />
    <TextView
        android:id="@+id/longitude_marker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/default_padding"
        android:gravity="end"
        tools:text="-6547.7676"
        app:layout_constraintTop_toBottomOf="@id/latitude_marker"
        />

</androidx.constraintlayout.widget.ConstraintLayout>